<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Settings.Controls.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Settings.Controls.Views.SettingsViewUserControl"
             x:DataType="viewModels:SettingsViewUserControlViewModel"
             x:CompileBindings="True">

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <StackPanel Orientation="Horizontal" Margin="6">
            <Button Content="Снять" Command="{Binding SaveSnapshotCommand}" Margin="0,0,6,0" />
            <Button Content="Применить" Command="{Binding ApplyCommand}" Margin="0,0,6,0" />
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="0,0,6,0" />
            <Button Content="Обновить" Command="{Binding LoadCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Settings}"
                  SelectedItem="{Binding Selected, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  Margin="6"
                  FontStretch="Condensed"
                  FontSize="11">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Режим" Binding="{Binding Mode}" Width="*" />
                <DataGridTextColumn Header="Обновлено"
                                    Binding="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                    Width="*" />
                <DataGridTextColumn Header="Цепочка" Binding="{Binding SectionsSummary}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
        
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" Margin="6,0,6,4" FontSize="11" />

        <ListBox Grid.Row="3"
                 ItemsSource="{Binding ApplySteps}"
                 BorderThickness="1"
                 BorderBrush="Gray"
                 Margin="6,0,6,6"
                 MaxHeight="110">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Display}" FontSize="11" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
