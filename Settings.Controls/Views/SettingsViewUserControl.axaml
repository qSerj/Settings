<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Settings.Controls.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Settings.Controls.Views.SettingsViewUserControl"
             x:DataType="viewModels:SettingsViewUserControlViewModel"
             x:CompileBindings="True">

    <Grid>
        <DataGrid ItemsSource="{Binding Settings}"
                  SelectedItem="{Binding Selected, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserResizeColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  Margin="4"
                  FontStretch="Condensed"
                  FontSize="10"
                  RowHeight="22"
                  ColumnHeaderHeight="22">
            <DataGrid.Styles>
                <Style Selector="DataGridCell">
                    <Setter Property="Padding" Value="4,1" />
                </Style>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="Padding" Value="4,1" />
                </Style>
                <Style Selector="DataGridRow">
                    <Setter Property="MinHeight" Value="22" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="Auto" />
                <DataGridTextColumn Header="Режим" Binding="{Binding Mode}" Width="Auto" />
                <DataGridTextColumn Header="Обновлено"
                                    Binding="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                    Width="Auto" />
                <DataGridTextColumn Header="Антенна" Binding="{Binding AntennaSummary}" Width="Auto" />
                <DataGridTextColumn Header="Приемник" Binding="{Binding RpuSummary}" Width="Auto" />
                <DataGridTextColumn Header="Детектор" Binding="{Binding DetectorSummary}" Width="Auto" />
                <DataGridTextColumn Header="СКК" Binding="{Binding DemodulatorSummary}" Width="Auto" />
                <DataGridTextColumn Header="Декодер" Binding="{Binding DecoderSummary}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
